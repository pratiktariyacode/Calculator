import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class Krishna extends Application{

    Label ans ;
    TextField num1 , num2;
    Button btn1,btn2,btn3,btn4;
    @Override
    public void start(Stage arg0) throws Exception {
        
        num1 = new TextField();
        num2 = new TextField();
        ans = new Label("");

        btn1 = new Button("+");
        btn1.setOnAction(e->{
            double number1 = Double.parseDouble(num1.getText());
            double number2 = Double.parseDouble(num2.getText());
            double result = number1 + number2;

            ans.setText("Result: " + result);

        });

        btn2 = new Button("-");
        btn2.setOnAction(e->{
            double number1 = Double.parseDouble(num1.getText());
            double number2 = Double.parseDouble(num2.getText());
            double result = number1 - number2;

            ans.setText("Result: " + result);

        });

        btn3 = new Button("*");
        btn3.setOnAction(e->{
            double number1 = Double.parseDouble(num1.getText());
            double number2 = Double.parseDouble(num2.getText());
            double result = number1 * number2;

            ans.setText("Result: " + result);

        });

        btn4 = new Button("/");
        btn4.setOnAction(e->{
            double number1 = Double.parseDouble(num1.getText());
            double number2 = Double.parseDouble(num2.getText());
            double result = number1 / number2;

            ans.setText("Result: " + result);

        });

        HBox btnBox = new HBox(10,btn1,btn2,btn3,btn4);
        HBox hBox = new HBox(10,num1,num2);
        VBox vBox = new VBox(10,hBox,ans,btnBox);
        Scene scene = new Scene(vBox,300,300);

        arg0.setTitle("Krishna Application");
        arg0.setScene(scene);
        arg0.show();
        
    }

    public static void main(String[]args){
        launch(args);
    }

}
